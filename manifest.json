{
	"manifest_version": 2,
	"name": "tweetflick",
	"description": "Organize and save your tweets like pro. Get the most out of your twitter - Tweetflick.",
	"version": "1.0.0",
	"icons": {
		"16": "./icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"browser_action": {
		"default_icon": "icon16.png",
		"default_title": "tweetflick",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["./background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["https://twitter.com/*", "https://mobile.twitter.com/home"],
			"js": ["content.js", "popup.js"]
		}
	],
	"permissions": [
		"tabs",
		"cookies",
		"https://twitter.com/*",
		"https://tweetflick.com/*"
	]
}
